pad_speed=5

function _init()
	cls()
end

function _update60()
	button_press=false

	--left
	if btn(⬅️) then
		pad_dx=-pad_speed
		button_press=true
		--pad_x-=pad_speed
	end

	--right
	if btn(➡️) then
		pad_dx=pad_speed
		button_press=true
		--pad_x+=pad_speed
	end
	
	if not button_press then
		pad_dx=pad_dx/2.3
	end
	
	pad_x+=pad_dx

 if ball_x > 127 or ball_x < 0 then
 	ball_dx = -ball_dx
 	sfx(0)
 end

 if ball_y > 127 or ball_y < 0 then
 	ball_dy = -ball_dy
 	sfx(0)
 end
 
 ball_x+=ball_dx
 ball_y+=ball_dy
 
end

function _draw()
	-- fills the screen background
	rectfill(0,0,127,127,1)
	
	-- draw the ball
	circfill(ball_x,ball_y,ball_r,col)

	-- draw the paddle	
	rectfill(pad_x,pad_y, pad_x+pad_w,pad_y+pad_h,paddle_col)
end

