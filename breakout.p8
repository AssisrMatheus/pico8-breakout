function _init()
	cls()
end

function _update60()
	frame = frame+1

 ball_x = ball_x + ball_dx
 ball_y = ball_y + ball_dy
 
 if ball_x > 127 or ball_x < 0 then
 	ball_dx = -ball_dx
 	sfx(0)
 end

 if ball_y > 127 or ball_y < 0 then
 	ball_dy = -ball_dy
 	sfx(0)
 end
 
end

function _draw()
	rectfill(0,0, 127, 127, 1)
	circfill(ball_x, ball_y, ball_r, col)
end
